<h1>Create a new Pet</h1>

<form method="post" action="/pets">
  <input type = "text" name="name" id="pet_name">Pet name:</input>

<h3>Existing Owners</h3>
<% @owners.each do |owner| %>
<input type="radio" name="<%= owner.name %>" id="<%= owner.id %>" value="<%= owner.id %>" />
<% end %>
<br>

<h3>New Owner</h3>
<label>Owner Name:</label>
<br>
<input type="text" name="owner[name]" id="owner_name"></input>
<br><br>
<input type="submit" value="Create Pet" id="Submit">
</form>