<h1>Update Pet</h1>

<form method="post" action="/pets/<%= @pet.id %>">
  <input type="hidden" name="_method" id="hidden" value="patch"/>
  <label for="pet_name">Pet Name:</label>
  <br>
  <input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name" >Pet name:</input>
  

<h3>Existing Pets</h3>
<% @owners.each do |owner| %>
<input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"><%='checked' if !@pet.owner.empty? %>><%= owner.name %></input>
<% end %>
<br>


<h3>New Pets</h3>

<input type="text" name="owner[name]" id="owner_name"/>
<input type="submit" value="Update Pet" id="Submit">
</form>