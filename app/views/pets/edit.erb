<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
    <input type="hidden" name="_method" id="hidden" value="PATCH">
    <label for="name">Edit the Pet's Name:</label>
    <input type="text" name="pet[name]" id="pet_name" value= <%=@pet.name%>>

    <br>

    <p>Select an existing owner or create a new one below:</p>

    <h3>Owners:</h3>
    <%@owners.each do |owner|%>
        <%if @pet.owner_id == owner.id%>
            <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" checked > <%=owner.name%> </input>
        <% else %>
        <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" ><%=owner.name%></input>
        <% end %>
    <% end %>
    <input type="radio" name="pet[owner_id]">New Owner: <input type="text" name="owner[name]" id="owner_name"></input>

    <br>

    <input type="submit" value="Update Pet">




</form>




